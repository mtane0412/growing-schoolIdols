{
    "name": "生えてくるスクールアイドル",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "16": "img/yo16.png",
            "32": "img/yo32.png",
            "48": "img/yo48.png",
            "128": "img/yo128.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["content.css"],
        "js": ["content.js"]
    }],
    "web_accessible_resources": ["img/*"],
    "permissions": [
        "storage"
    ]

}